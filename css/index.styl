@import './mixin'

#header h1 {
  margin-top: 20px;
  margin-bottom: 0px;
  padding-bottom: 0px;
  font-family: "Times New Roman", serif;
  font-size: 40px;
}

#header hr {
  margin-top: 0px;
  margin-bottom: 20px;
  padding: 0px;
}

#footer hr {
  margin-top: 20px;
  margin-bottom: 0px;
}

/* currentNumber */

#currentNumber hr {
  clear: both;
}

.navNumber {
  font-family: "Times New Roman", serif;
  text-align: center;
  float: left;
  width: 33%;
}
.navNumber h1 {
  font-size: 200px;
  padding: 2px;
  margin-top: 100px;
}
#nextNumber,#previousNumber {
  color: #ccc;
  opacity: 0;
}

/* currentDescs */

.numberType {
  border: 1px solid #eee;
  margin: 2px;
  padding: 2px;
  border-radius: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
}

.numberType .name {
  font-size: 12px;
  margin-bottom: 0px;
}

.numberType .description {
  font-size: 11px;
  margin-bottom: 0px;
  line-height: 12px;
}

#currentDescs hr {
  clear: both;
  padding-top: 5px;
}

/* code I was trying that would hide the description from non-definitions.
