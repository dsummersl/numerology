  display: none;
}

.numberType.active .description {
  display: inline;
}
*/

.numberType .name {
  font-weight: bold;
}

.numberType .name {
  color: #ccc;
}
.numberType .description {
  color: #ccc;
}

.numberType.active {
  background: #eee;
}

.numberType.active .name {
  color: #000;
}
.numberType.active .description {
  color: #000;
}

